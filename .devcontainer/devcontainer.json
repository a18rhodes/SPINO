{
  "name": "SPINO Env",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "mounts": [
    "source=${localEnv:ONEDRIVE_PATH},target=/backup,type=bind"
  ],
  "runArgs": [
    "--gpus", "all",
    "--shm-size", "8g"
  ],
  "containerEnv": {
    "SPINO_BACKUP_DIR": "/backup"
  },
  "forwardPorts": [8888, 5000],
  "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind",
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "quarto.quarto",
        "ms-toolsai.tensorboard",
        "tamasfe.even-better-toml",
        "ms-python.pylint"
      ],
      "settings": {
        "extensions.autoUpdate": false,
        "extensions.ignoreRecommendations": true
      }
    }
  },
  "postCreateCommand": "code-server --install-extension ms-python.python --install-extension ms-toolsai.jupyter --install-extension quarto.quarto --install-extension ms-toolsai.tensorboard --install-extension tamasfe.even-better-toml --install-extension ms-python.pylint || true"
}
